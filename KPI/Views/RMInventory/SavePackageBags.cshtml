@model KPILib.Models.RMInventoryPackageBagsModel

@{
    ViewBag.Title = "SavePackageBags";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Package Bags</h2>
<hr />

<div class="form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", New { @class = "text-danger" })
        @Html.HiddenFor(modelItem => modelItem.PackageBagId)

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Size, htmlAttributes New { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.Size, New { htmlAttributes = New { @class = "form-control", @placeholder = "Enter Size" } })
                        @Html.ValidationMessageFor(model => model.Size, "", New { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.VendorId, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.DropDownListFor(model => model.VendorId, null, "--Select--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VendorId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.QtyInStock, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.QtyInStock, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Quantity in stock" } })
                        @Html.ValidationMessageFor(model => model.QtyInStock, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.MinOrderLevel, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.MinOrderLevel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Min Order Level" } })
                        @Html.ValidationMessageFor(model => model.MinOrderLevel, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="row">
                @*<div class="col-md-3">
                        @Html.LabelFor(model => model.ColorId, htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.DropDownListFor(model => model.ColorId, null, "--Select--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ColorId, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                <div class="col-md-3">
                    @Html.LabelFor(model => model.LocationId, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.DropDownListFor(model => model.LocationId, null, "--Select--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ItemType, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.ItemType, null, "--Select--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemType, "", New { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ItemDetail, htmlAttributes New { @class = "control-label" })
                        @Html.TextBoxFor(model => ItemDetail.ItemType, New { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemDetail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <label>&nbsp;</label>
                    <div class="">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <input type="button" value="Back" class="btn btn-danger" onclick="window.location.href='/RMInventory/GetAllPackagBags'" />
                    </div>
                </div>
            </div>
        </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
