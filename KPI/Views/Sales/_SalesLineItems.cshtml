@using KPI.Classes;
@using HtmlHelpers.BeginCollectionItem;
@model KPILib.Models.SalesDetails

<tr>
    @using (Html.BeginCollectionItem("LineItems"))
    {
        <td class="ProductID">
            @Html.DropDownListFor(model => model.ProductID, ViewBag.Products as SelectList, "--Select--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @style = "width:100px", @maxlength = "6" } })
            @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.DropDownListFor(model => model.Gms, null, "--Select--", new { @class = "form-control", @style = "width:100px", @maxlength = "6" })
            @Html.ValidationMessageFor(model => model.Gms, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control", @style = "width:100px", @maxlength = "6" } })
            @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Package, new { htmlAttributes = new { @class = "form-control", @style = "width:100px", @maxlength = "6" } })
            @Html.ValidationMessageFor(model => model.Package, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @style = "width:100px", @maxlength = "6" } })
            @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.CheckBoxFor(model => model.SampleReq, new { htmlAttributes = new { @class = "form-control", @style = "width:100px", @maxlength = "6" } })
            @Html.ValidationMessageFor(model => model.SampleReq, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Instructions, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Instructions, "", new { @class = "text-danger" })
        </td>
        @*<td>
                @Html.DropDownListFor(model => model.SalesStatusID, ViewBag.Products as SelectList, "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SalesStatusID, "", new { @class = "text-danger" })
            </td>*@
        <td>
            <input type="button" value="Delete" class="btn btn-primary btn-sm" onclick="DeleteLineItemRow(this)" />
        </td>
    }
</tr>

<script>
    $(function () {
        $(this).find('td.ProductID').find('select').find('option:nth-child(1)').val("0");
    })
</script>