        <td class="ProductID">
            @*@Html.DropDownListFor(model => model.RawMatarialID, ViewBag.Products as SelectList, "--Select Raw Material--", new { @class = "form-control" })*@

            @Html.DropDownListFor(model => model.ProductID, ViewBag.Products as SelectList, "--Select--", new { @class = "form-control" })
