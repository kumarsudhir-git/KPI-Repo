@using HtmlHelpers.BeginCollectionItem;
@model KPILib.Models.SalesDetails

<tr>
    @using (Html.BeginCollectionItem("LineItems"))
    {
        <!--<td width="70px">-->
        @*@Html.ImageActionLink("", "GetAll", "Rack", new { id = item.SalesDetailsID }, null, "~/images/garbage.png")*@
        <!--</td>-->
        @*<td>
                @Html.DisplayFor(model => model.SalesDetailsID)
