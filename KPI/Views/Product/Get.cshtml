@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function AddLineItemRow() {

        var strURL = "/Product/PartialProduct";
        var selector = "#ProductTbl tbody";
        AddLineItemRowGeneric(strURL, "GET", selector);
    }
</script>
